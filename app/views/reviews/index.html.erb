<section class="section mt-6">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
              <%= @onsen.name %>
            </p>
          </header>
          <div class="card-content">
            <div class="content average-score">
              <div class="star-rating mb-2">
                <div class="star-rating-front" style="width: <%= @onsen.review_score_percentage %>%">★★★★★</div>
                <div class="star-rating-back">★★★★★</div>
              </div>
              <div class="average-score-display ml-3 pt-2">
                <%= @onsen.avg_score %>点（<%= @onsen.reviews.count %>件のレビュー）
              </div>
            </div>
          </div> 
        </div>
        <table class="table is-fullwidth has-text-centered">
          <thead>
            <tr>
              <th>ユーザー</th><th>点数</th><th>内容</th>
            </tr>
          </thead>
          <tbody>
            <% @reviews.each do |review| %>
              <tr>
                <td><%= review.user.username %></td>
                <td><%= review.score %></td>
                <td><%= review.impression %></td>
             <% if review.user == current_user %>
                <td><%= link_to "削除", review_path(review.id), method: :delete %></td> 
             <% end %>
           <% end %>
              </tr>
          </tbody>
        </table> 
      </div>
    </div>
  </div> 
</section>